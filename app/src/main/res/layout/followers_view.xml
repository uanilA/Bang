<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginStart="@dimen/_5sdp"
    android:layout_marginEnd="@dimen/_5sdp"
    android:id="@+id/rlParentLayout"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_height="@dimen/_80sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivFollowerOrFollowing"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/img_three"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ivFollowerOrFollowing"
            android:orientation="vertical"
            tools:ignore="ObsoleteLayoutParam">

            <TextView
                android:id="@+id/tvFollowerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Olivia Smith"
                android:singleLine="true"
                android:maxLines="1"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/colorFollowerName"
                android:fontFamily="@font/roboto_medium"/>

            <TextView
                android:id="@+id/tvCountFollowers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:maxLines="1"
                android:text="50 Followers"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/colorLoginText"/>

        </LinearLayout>

    </LinearLayout>




    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:background="@color/colorShapeLine"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>