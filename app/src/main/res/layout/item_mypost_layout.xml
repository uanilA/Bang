<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_210sdp"
        card_view:cardBackgroundColor="@color/colorLoginBg"
        card_view:cardCornerRadius="5dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_140sdp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/news_feed_pos" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_140sdp"
                android:background="@android:color/transparent">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/ivGradient"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_gravity="bottom"
                    android:visibility="gone"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/user_image_gradient" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/ivVideoPlay"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_video_icon"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/_14sdp">

                    <RelativeLayout
                        android:layout_width="@dimen/_17sdp"
                        android:layout_height="@dimen/_17sdp"
                        android:alpha=".2"
                        android:id="@+id/rlReportUser"
                        android:background="@drawable/bg_gray_circle" />

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/white_more" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlLikes"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="@dimen/_10sdp">

                    <android.support.v7.widget.CardView
                        android:layout_width="@dimen/_65sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:alpha=".2"
                        android:background="@color/colorLoginBg"
                        card_view:cardCornerRadius="@dimen/_4sdp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/ivHeartImage"
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_unlike_icon" />

                        <TextView
                            android:id="@+id/tvUserLikes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="@string/_30_likes"
                            android:textColor="@color/colorLoginBg"
                            android:textSize="@dimen/_10sdp" />

                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tc_addiction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/william_ethan_is_addictive_with_james"
                    android:textColor="@color/colorWelcomeText"
                    android:textSize="@dimen/_12ssp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:ignore="RelativeOverlap">

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_calendar_icon" />

                        <TextView
                            android:id="@+id/tvCreatedOnDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_9sdp"
                            android:text="@string/may_2_2018"
                            android:textSize="@dimen/_11ssp" />

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>