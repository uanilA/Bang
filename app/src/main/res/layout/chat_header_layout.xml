<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize">

    <ImageView
        android:id="@+id/ivBackChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_arrow"
        android:layout_centerVertical="true"
        android:padding="@dimen/_10sdp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivChatUser"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_toEndOf="@+id/ivBackChat"
        android:layout_centerVertical="true"
        android:src="@drawable/img_one"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/ivChatUser"
        android:layout_centerVertical="true"
        android:text="Oliver smith"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/colorWelcomeText"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginStart="@dimen/_8sdp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more_icon"
        android:layout_centerVertical="true"
        android:padding="@dimen/_10sdp"
        android:layout_alignParentEnd="true" />

</RelativeLayout>