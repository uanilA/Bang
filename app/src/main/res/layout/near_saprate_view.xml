<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/llFollowLay"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvFollow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/follow"
                android:layout_gravity="center"
                android:textColor="@color/colorNearYouText"
                android:textSize="@dimen/_10ssp"
                android:paddingStart="@dimen/_8sdp"
                android:paddingTop="@dimen/_3sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:background="@drawable/follow_rounded_corner_background"
                android:fontFamily="@font/roboto_regular" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/llBang"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:layout_gravity="center" />



        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:text="@string/bang"
            android:layout_toEndOf="@+id/llFollowLay"
            android:textAllCaps="true"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/colorNearYouText"
            android:textSize="@dimen/_10sdp"/>

        <LinearLayout
            android:id="@+id/llFollowPosition"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:orientation="vertical"
            tools:ignore="RelativeOverlap">

            <TextView
                android:id="@+id/tvNumbersOfFollowers"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_17sdp"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center|bottom"
                android:textColor="@color/colorNearYouText"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/tvFollowers"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_17sdp"
                android:fontFamily="@font/roboto_light"
                android:gravity="center|top"
                android:text="@string/followers"
                android:textColor="@color/colorLoginText"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>
</RelativeLayout>