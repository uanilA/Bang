<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLoginBg"
    tools:context=".preference.fragment.SkillsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true"
        android:overScrollMode="never"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/skills"
                android:textColor="@color/colorWelcomeText"
                android:textSize="@dimen/_15ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/_12ssp"
                android:layout_marginEnd="@dimen/_28sdp"
                android:layout_marginStart="@dimen/_28sdp"
                android:padding="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/colorLoginText"
                android:gravity="center"
                android:text="@string/what_image_best_represent_your_partners_skills"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <CheckBox
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:background="@drawable/check_box_selector"
                        android:button="@null"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:id="@+id/cvPreferenceSkillsFirstCheck"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"/>

                    <RelativeLayout
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:id="@+id/rlPreferenceSkillsFirstLayout"
                        android:background="@drawable/not_selected_image_border"
                        android:layout_margin="@dimen/_10sdp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <CheckBox
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:background="@drawable/check_box_selector"
                        android:button="@null"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:id="@+id/cvPreferenceSkillsSecondCheck"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"/>

                    <RelativeLayout
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:id="@+id/rlPreferenceSkillsSecondLayout"
                        android:background="@drawable/not_selected_image_border"
                        android:layout_margin="@dimen/_10sdp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <CheckBox
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:background="@drawable/check_box_selector"
                        android:button="@null"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:id="@+id/cvPreferenceSkillsThirdCheck"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"/>

                    <RelativeLayout
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:id="@+id/rlPreferenceSkillsThirdLayout"
                        android:background="@drawable/not_selected_image_border"
                        android:layout_margin="@dimen/_10sdp"/>

                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/tvFirstPreferenceNext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_35sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/login_rounded_border"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="@string/next"
                android:textColor="@color/colorWelcomeText"
                android:textSize="@dimen/_13ssp" />

            <TextView
                android:id="@+id/tvFirstPreferenceSkip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="@dimen/_10sdp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/skip"
                android:textColor="@color/colorSkip"
                android:textSize="@dimen/_13ssp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>