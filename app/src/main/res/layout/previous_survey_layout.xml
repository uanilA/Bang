<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="0dp"
    android:layout_marginStart="@dimen/_5sdp"
    android:layout_marginEnd="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_height="@dimen/_70sdp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/_10sdp"
        android:layout_toStartOf="@+id/rlViewSurveyLayout"
        android:gravity="center|start"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvTitleSurvey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/selecting_partner"
            android:layout_marginBottom="@dimen/_4sdp"
            android:textColor="@color/colorWelcomeText"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/tvSurveyDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:textSize="@dimen/_9ssp"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/was_your_experience_with_a_male_or_female"
            android:textColor="@color/colorTextName" />


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rlViewSurveyLayout"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/not_selected_image_border">

        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/ivViewSurvey"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/_8sdp"
            android:background="@null"
            app:siBorderColor="@color/colorPrimaryDark"
            app:siBorderWidth="1dp"
            app:siRadius="@dimen/_8sdp" />

    </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>